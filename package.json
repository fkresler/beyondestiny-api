{
  "name": "beyondestiny-api",
  "version": "1.0.0",
  "description": "server side implementation to query bungie data",
  "main": "dist/server.js",
  "scripts": {
    "lint": "tsc --noEmit && eslint \"src/**/*.{js,ts}\" --quiet --fix",
    "build": "yarn lint && yarn test && yarn build:ts",
    "build:ts": "tsc",
    "start": "node dist/server.js",
    "start:watch": "nodemon --ignore tests/ --watch src -e ts,tsx --exec ts-node src/server.ts",
    "test": "jest --passWithNoTests"
  },
  "keywords": [
    "destiny",
    "destiny2",
    "api"
  ],
  "author": "Fabian Kresler",
  "license": "MIT",
  "dependencies": {
    "@koa/router": "^10.1.1",
    "dotenv": "^10.0.0",
    "koa": "^2.13.3"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/koa": "^2.13.4",
    "@types/koa__router": "^8.0.8",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.1",
    "eslint-plugin-import": "^2.25.2",
    "jest": "^27.2.5",
    "nodemon": "^2.0.13",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.4"
  }
}
